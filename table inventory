 select * from ( with db_name as (
select name from v$database@LINK_SREF),

LAST_DM AS(SELECT A.TABLE_NAME, A.INSERTS, A.TIMESTAMP, A.TRUNCATED, A.UPDATES,A.DELETES
    FROM DBA_TAB_MODIFICATIONS @LINK_SREF A
