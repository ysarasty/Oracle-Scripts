SELECT B.NAME DB, A.OWNER, SUBSTR(A.TABLE_NAME,0,3), A.TABLE_NAME,A.NUM_ROWS,A.LAST_ANALYZED, C.TIMESTAMP,C.INSERTS, C.TRUNCATED,C.DELETES
